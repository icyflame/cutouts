%div.article_single
  %a{:href => object.link, :target => "_blank", :style => "font-size: 19px"}
    #{(object.title && object.title.length > 0) ? object.title : (object.link =~ URI::regexp ? URI(object.link).host : "#{object.link.slice(0, 10)}...")} #{fa_icon("external-link")}
  %span &nbsp; &nbsp; #{viz_icon object.visibility}
  %p
    written by #{object.author}.
    %i{title: "#{object.created_at.to_s}"} added #{time_ago_in_words(object.created_at)} ago
    %a.pull-right{:href => "https://archive.is/#{object.link}", :target => "_blank", :style => "font-size: 19px"}
      ARCHIVES
  %p
    - object.tags_array.each do |tag|
      %a.btn.btn-primary{:href => "#{article_index_path}?input=tag:#{tag}"}= tag
    %span.pull-right #{link_to(fa_icon("link", class: "fa-2x"), article_path(object))} &nbsp;  #{link_to(fa_icon("share-alt", class: "fa-2x"), "#{article_path(object)}/share")} &nbsp; #{link_to(fa_icon("pencil", class: "fa-2x"), edit_article_path(object))} &nbsp; #{link_to(fa_icon("trash", class: "fa-2x"), article_path(object), method: :delete, data: { confirm: "Are you sure you want to delete that article?" } )}
  %blockquote.article-quote #{object.quote}
