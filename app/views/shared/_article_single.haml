%div.article_single
  %a{:href => object.link, :target => "_blank", :style => "font-size: 19px"}
    #{object.title || URI(object.link).host} #{fa_icon("external-link")}
  %p
    written by #{object.author}#{object.title ? (" on " + URI(object.link).host) : ""}
    %a.pull-right{:href => "https://archive.is/#{object.link}", :target => "_blank", :style => "font-size: 19px"}
      ARCHIVES
  %p
    - object.tags_array.each do |tag|
      %u>
        %a{:href => article_index_path + "?input=tag:#{tag}"} #{tag}
      ,&nbsp;
    %span.pull-right #{link_to(fa_icon("share-alt", class: "fa-2x"), edit_article_path(object))} #{link_to(fa_icon("pencil", class: "fa-2x"), edit_article_path(object))}  #{link_to(fa_icon("trash", class: "fa-2x"), article_path(object), method: :delete, data: { confirm: "Are you sure you want to delete that article?" } )}
  %blockquote.article-quote #{object.quote}
